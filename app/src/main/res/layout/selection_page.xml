<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="MissingConstraints">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/untitleddesign">

        <ImageView
            android:layout_width="125dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/group"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="130dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:background="@drawable/opendoor"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="320dp"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="70dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:background="@drawable/ic_message"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="320dp"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="70dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:background="@drawable/ic_call"
            tools:layout_editor_absoluteX="67dp"
            tools:layout_editor_absoluteY="320dp"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="70dp" />

        <RadioGroup
            android:id="@+id/radioComm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="-105dp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="480dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="120dp">

            <RadioButton
                android:id="@+id/radioVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Visit"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="480dp" />

            <RadioButton
                android:id="@+id/radioMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                tools:layout_editor_absoluteX="210dp"
                tools:layout_editor_absoluteY="480dp" />

            <RadioButton
                android:id="@+id/radioCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                tools:layout_editor_absoluteX="210dp"
                tools:layout_editor_absoluteY="480dp" />
        </RadioGroup>


        <Button
            android:id="@+id/Nextbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="120dp"
            android:layout_marginEnd="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="140dp"
            android:text="Next"
            android:background="@drawable/border"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>